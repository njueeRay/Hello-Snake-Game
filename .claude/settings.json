{
  "permissions": {
    "allow": [
      "Bash(*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(* --no-verify*)"
    ]
  },
  "env": {
    "NODE_ENV": "development"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '--- Session End: Task completed ---'"
          }
        ]
      }
    ]
  }
}
